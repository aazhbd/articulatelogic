{% extends path_sys_template %}
{% block title %}
    {{ page_title|default('Home') }}
{% endblock %}
{% block contentheader %}
    <nav class="navbar navbar-expand-lg fixed-top scrolling-navbar navbar-dark unique-color transparent opacity">
        <a href="{{ path_url_postfix }}/" id="logo">
            ArticulatedLogic
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicNav"
                aria-controls="basicNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="basicNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path_url_postfix }}/home">Home</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path_url_postfix }}/downloads">Downloads</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="ServicesNavMenu" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">About</a>
                    <div class="dropdown-menu dropdown-primary" aria-labelledby="ServicesNavMenu">
                        <a href="{{ path_url_postfix }}/a/services" class="dropdown-item">Services</a>
                        <a href="{{ path_url_postfix }}/a/solutions" class="dropdown-item">Solutions</a>
                        <a href="{{ path_url_postfix }}/a/research" class="dropdown-item">Development</a>
                        <a href="{{ path_url_postfix }}/a/webmarketing" class="dropdown-item">Web Marketing</a>
                        <a href="{{ path_url_postfix }}/a/methodology" class="dropdown-item">Methodology</a>
                        <a href="{{ path_url_postfix }}/a/consultancy" class="dropdown-item">Consultancy</a>
                        <a href="{{ path_url_postfix }}/a/about" class="pure-menu-link">About</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path_url_postfix }}/a/contact" class="pure-menu-link">Contact</a>
                </li>

                {% if session.get('user_info').utype == 1 %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="AdminNavMenu" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">Admin Menu</a>
                        <div class="dropdown-menu dropdown-primary" aria-labelledby="AdminNavMenu">
                            <a href="{{ path_url_postfix }}/user/list" class="dropdown-item">Manage Users</a>
                            <a href="{{ path_url_postfix }}/article/list" class="dropdown-item">Manage Articles</a>
                            <a href="{{ path_url_postfix }}/category/list" class="dropdown-item">Manage Categories</a>
                            <a href="{{ path_url_postfix }}/files/list" class="dropdown-item">Manage Files</a>
                        </div>
                    </li>
                {% endif %}
            </ul>

            {% if session.get('is_authenticated') %}
                <a class="btn btn-outline-white waves-effect" href="{{ path_url_postfix }}/home">
                    {% if session.get('user_info').firstname %}
                        {{ session.get('user_info').firstname }}'s
                    {% else %}
                        User
                    {% endif %}
                    Home
                </a>
                <a class="btn btn-outline-white waves-effect" href="{{ path_url_postfix }}/logout">Logout</a>
            {% else %}
                <a class="btn btn-outline-white waves-effect" href="{{ path_url_postfix }}/login" role="button" aria-pressed="true">Sign In</a>
                <a class="btn btn-outline-white waves-effect" href="{{ path_url_postfix }}/signup" role="button" aria-pressed="true">Sign Up</a>
            {% endif %}

        </div>
    </nav>
{% endblock %}
{% block contentbody %}
    {% if content_message %}
        <div id="reports" class="alert alert-info container-fluid" role="alert">{{ content_message }}</div>
    {% endif %}
    {{ parent() }}
    {{ body_content }}
    {% autoescape false %}
        <script type="text/javascript">
            var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
            document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
        </script>
        <script type="text/javascript">
            try {
                var pageTracker = _gat._getTracker("UA-10149323-1");
                pageTracker._trackPageview();
            } catch (err) {
            }
        </script>
    {% endautoescape %}
{% endblock %}



{% block footers %}
    <div class="content">
        &copy; 2008 - {{ "now"|date("Y") }} <a href="mailto:aazhbd@yahoo.com">AAZ H</a> | <a
                href="http://www.articulatedlogic.com/">ArticulatedLogic.com</a>
        | <a href="{{ path_url_postfix }}/a/career">Join Our Team</a>
        | <a href="{{ path_url_postfix }}/a/policies">Terms Of Use</a>
        | <a href="{{ path_url_postfix }}/downloads">Downloads</a>
    </div>
{% endblock %}
