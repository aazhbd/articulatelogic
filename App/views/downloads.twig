{% extends path_user_template ~ '/home.twig' %}

{% block title %}{% spaceless %}
    {{ page_title|default('Downloads') }}
{% endspaceless %}{% endblock %}

{% block headtags %}
    <script type="text/javascript">
        $(document).ready(function () {
            if ($("#errors").html() == '') {
                $("#errors").hide();
            }
        });
    </script>
{% endblock %}

{% block contentbody %}
    {{ parent() }}
    {{ body_content }}

    {% for a in articles %}

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 product-box">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> <a href="{{ path_url_postfix }}/a/{{ a.url }}/">{{ a.title }}</a></h4>
                </div>
                <div class="card-body">
                    <p class="card-text"><a href="{{ path_url_postfix }}/a/{{ a.url }}/">{{ a.subtitle }}</a></p>
                    <span class="d-flex justify-content-start">{{ a.remarks }}</span>
                    <a href="{{ path_url_postfix }}/a/{{ a.url }}/" class="d-flex justify-content-end">
                        <h5>Details <i class="fas fa-angle-double-right"></i></h5>
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}

